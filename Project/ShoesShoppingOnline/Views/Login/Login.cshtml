@model ShoesShoppingOnline.Models.DataModel.AccountModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="shopping-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="location">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")" title="go to homepage">Home<span>/</span></a>  </li>
                        <li><strong>Login page</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="login-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>Sign In</h2>
                                <span>Please sign in using your account details below.</span>
                            </div>
                            <div class="login-form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                {
                                <form action="#" method="post">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember me</label>
                                            <a href="forgot_password.html">Forgot Password?</a>
                                        </div>
                                        <button type="submit" class="default-btn">Sign In</button>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Don't have an account? <a href="@Url.Action("Register","Register")" style="color: #e03550;">
                                                Register here
                                            </a>
                                        </p>
                                    </div>
                                </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

